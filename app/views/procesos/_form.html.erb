<%= form_for(@proceso, :html => { :class => "custom"}) do |f| %>

<div class="row">

  <div class="small-2 small-offset-0 columns ">
    <%= f.label "Tipo de Proceso", :class => "tituloCampo error alinearDerecha" %>
  </div>
  <div class="small-4 columns field">
     <%= f.select :tipo_proceso_id, [["Tipo Proceso", 0]] + @tipos_procesos.map {|r| [r.tipo,r.id]}, { :disabled => ["Tipo Proceso", 0] } %>
  </div>

   <div class="small-2 small-offset-0 columns ">
    <%= f.label :titulo_, :class => "tituloCampo error alinearDerecha" %>
  </div>
  <div class="small-4 columns field">
    <%= f.text_field :titulo , :placeholder => "Titulo del proceso "%>
  </div>
</div> 

<div class="row"> 
  <div class="small-2  columns">
    <%= f.label :referencia_, :class => "tituloCampo error alinearDerecha" %>
  </div>
  <div class="small-4 columns ">
     <%= f.text_field :referencia , :placeholder => "Número de Referencia" %>
  </div>
  <div class="small-2 small-offset-0 columns ">
    <%= f.label :objetivo_, :class => "tituloCampo error alinearDerecha" %>
  </div>
  <div class="small-4 columns field">
    <%= f.text_area :objetivo, :rows => 10, :cols => 27, :placeholder => "Objetivo del proceso, máximo 250 caracteres"  %>
  </div>
  
   <div class="small-2 small-offset-0 columns ">
    <%= f.label :ciudad_, :class => "tituloCampo error alinearDerecha" %>
  </div>
  <div class="small-4 columns field">
    <%= f.text_field :ciudad , :placeholder => "Ciudad del proceso"%>
  </div>
</div>
<div class="row"> 

  <% if @proceso.errors.any? %>
      <div class="small-4 columns field"></div>
      <div class="small-4 small-offset-3 columns field">
        <h2><%= pluralize(@proceso.errors.count, "errore") %> encontrados</h2>
      </div>
      <div class="small-5 columns field">
        <%= f.submit :'Guardar Proceso' , :class => " button success radius" %></div>
     </div>
  <% else %>      
      <div class="small-1 small-offset-8 columns field"></div>
      <div class="small-2 columns field">
        <%= f.submit :'Guardar Proceso' , :class => " button success radius" %></div>
     </div>
  <% end %>
 
</div>

<% end %>