<body>
    <div id="workspace" class="workspace">
        <div class="container flat_container"  style="opacity: 1;">
        <div class="panel panelTransparente home_tab project_index  " >

            <title>Procesos</title>

            <nav class="projects_nav ">
                <%= link_to '', new_proceso_path %>
            </nav>
            <div class="project_templates nuevoProceso">
                <%= link_to 'Nuevo Proceso', new_proceso_path %>
            </div>

            <div class="project_view">
                <ul>
                    <li><a class="cards on"  href="#"></a></li>
                    <li><a class="starred"  href="#"></a></li>
                    <li><a class="list"  href="#"></a></li>
                </ul>
            </div>

            <div class="project_templates">
                <hr>
                <a href="#">Alertas Pendientes</a>
                <a href="#">Actividades Pendientes</a>
            </div>

            <div id="all_projects">
                <section class="projects cards">
                    <div class="row">
                       
                        <% @procesos.each do |proceso| %>
                        <article class="card fondoGris">
                            <span class="star"   title="proyecto favorito">
                                <i class="foundicon-star"></i> 
                            </span>
                            
                        <%= link_to(proceso) do  %>
                          
                            <h5>Proceso <%= proceso.id %></h5>
                                <p style="margin-bottom: 5px;"><%= proceso.titulo %></p>
                                <p style="margin-bottom: 5px;">cliente</p>

                                <p style="font-size: 12px;">
                                    Modificado <%= fechaFormato1 proceso.updated_at %>
                                </p>

                                <div class="panelAvatarUsuario">
                                    <% proceso.usuarios.each do |usuarioConAcceso| %>
                                        <div class="people">
                                            <img class="avatar" height="40" src="/img/user_blue.png" title="<%= usuarioConAcceso.username %>" width="40">
                                        </div>
                                    <% end %>
                                </div>

                        <% end %>
                        </article>
                        <% end %>
                        <article class="card blank " data-behavior="bounce_nav">&nbsp;</article>
                    </div>
                </section>
            </div>
        </div>
    </div>
    </div>
</body>