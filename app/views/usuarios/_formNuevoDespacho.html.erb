<div class="alert-panel" data-alert>
      <div id="headersingup" class="alert-panel-title">
        Crear cuenta
        <a href="#" class="alert-panel close-reveal-modal" onclick="$('#modalsignup').foundation ('reveal', 'close')">&times;</a>
      </div>

     <%= form_for @usuario, :remote => true, :html => { :class => "custom",:id => "formUsuario"} do |f| %>
      <div class="alert-panel-message" >

       <div class="row">


            <div class="small-2 small-offset-0 columns field"> 
              <%= label_tag "Correo" ,nil, :class => "tituloCampo error "  %>
            </div>
            <div class="small-10 columns field">
                 <%= f.text_field :username,:placeholder => "Correo Electronico",:class=> "input-xlarge" %>
            </div>

            <div class="small-2 small-offset-0 columns field"> 
              <%= label_tag "Nombre" ,nil, :class => "tituloCampo error "  %>
            </div>
            <div class="small-10 columns field">
                 <%= f.text_field :nombre,:placeholder => "Nombre completo",:class=> "input-xlarge" %>
            </div>

            <div class="small-2 small-offset-0 columns field"> 
              <%= label_tag :empresa ,nil, :class => "tituloCampo error "  %>
            </div>
            <div class="small-10 columns field">
               <%= f.text_field :empresa ,:placeholder => "Empresa",:class=> "input-xlarge" %>
            </div>

            <div class="small-2 small-offset-0 columns field"> 
              <%= label_tag "password" ,nil, :class => "tituloCampo error "  %>
            </div>
            <div class="small-10 columns field">
                 <%= f.text_field :password,:placeholder => "password",:class=> "input-xlarge" %>
            </div>

            <div class="small-2 small-offset-0 columns field"> 
              <%= label_tag "confirmar password" ,nil, :class => "tituloCampo error "  %>
            </div>
            <div class="small-10 columns field">
                 <%= f.text_field :password_confirmation,:placeholder => "Confirmar password",:class=> "input-xlarge" %>
            </div>


        </div>
    </div>
      <div class="alert-panel-action">
             <a href="#" class="textolinks" onclick="$('#modalLogin').foundation ('reveal', 'close')">Cerrar</a>
              <%= f.submit :'Inicia tu prueba gratuita de 30 dias' , :class => "button  radius" %></div>
      </div>
      <% end %>
       
</div>
