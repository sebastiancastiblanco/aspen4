<%= form_for(@estado,:html => { :multipart => true ,:class => "custom" }) do |f| %>


  <div class="row">
       <%= hidden_field_tag :proceso_id, params[:proceso_id] %>

     <div class="small-2 small-offset-0 columns ">
      <%= f.label :tipo_, :class => "tituloCampo error alinearDerecha" %>
    </div>
     <div class="small-4 columns field">
      <%= f.select :tipo,  options_for_select( [ ['Abierto', 'abierto'], ['Cerrado', 'cerrado'] ] ) %>
    </div>
</div>

<div class="row">

    <div class="small-2 small-offset-0 columns ">
      <%= f.label :conclusion_, :class => "tituloCampo error alinearDerecha" %>
    </div>
    <div class="small-10 columns field">
      <%= f.text_field :conclusion, :placeholder => "Conclusion" %>
    </div>

     <div class="small-2 small-offset-0 columns ">
      <%= f.label :Observaciones_, :class => "tituloCampo error alinearDerecha" %>
    </div>
    <div class="small-10 columns field">
      <%= f.text_field :resumen, :placeholder => "Observaciones y anotaciones adicionales" %>
    </div>


 </div>


<div class="row">

     <div class="small-1 small-offset-7 columns field"></div>
     <div class="small-1 columns field">
      <%= link_to   "Cancelar", {:controller => "estados", :action => "index", :proceso_id => params[:proceso_id]}, :class=>"textoGrislinks",:method=>:get %>
     </div>
     <div class="small-2 columns field">
      <%= f.submit :'Guardar Conclusion' , :class => " button success radius" %></div>
     </div>

</div>

<% end %>
