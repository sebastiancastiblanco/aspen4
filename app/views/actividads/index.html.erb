<body>
  <div id="workspace" class="workspace">
    <div class="container stack_container" style="width: 960px;">
      <div class="panel sheet project active blank_slate fondoGris" >

       <header>
          <ul class="breadcrumbs">
            <li><%= link_to @proceso, :class => "tituloProceso label round" do  %> 
                  <%= @proceso.tipo_proceso.tipo %> : <%= @proceso.titulo %>
                <% end %>
            </li>
            <li> <a href="#"> Actividades</a></li>
            <a href="#" data-reveal-id="myModalCompartirProceso" class="label secondary round" style="float:right;padding: 5px">
                 <i class="foundicon-mail compartirActiviaddIcono" ></i> Compartir avances
              </a>
          </ul>

         
                
     

        </header>
        <div id="date"></div>
        <div class="panel sheet topics fondoGris" style="margin-left: 20px; margin-bottom: -20px;" data-behavior=" prevent_reload_when_stacked">
          <header class="has_buttons">
            <div data-behavior="edit_project_header expandable">
            <div class="collapsed_content">
              <div class="row">
                <div class="small-12 columns">
                    <div id="paneltituloActividad" class="small-5 large-5 columns left">
                      <h1 id="tituloActividad">
                         <% if  @actividadesRender == "true" %>
                          Actividad
                          <% else %>
                          Actividades
                          <% end %>
                      </h1>
                    </div>
                   
                    <div id="botonesActividades" class="small-4 large-2 large-offset-4 columns left">
                        
                       <% if  @actividadesRender == "true" %>
                        <div id="new_actividad_link" class="ocultar">
                         <%= button_to 'Nueva Actividad', {:controller => "actividads", :action => "new", :id => @proceso.id},  :remote => true, :class => "button radius", :id => "new_actividad_link" %>
                        </div>
                        <%= button_to 'Listar Actividades',"javascript:listarActividades()" , :class => "button radius ", :id => "listar_actividades_link" %>

                        <% else %>

                           <%= button_to 'Nueva Actividad', {:controller => "actividads", :action => "new", :id => @proceso.id},  :remote => true, :class => "button radius ", :id => "new_actividad_link" %>
                        <div id="listar_actividades_link" class="ocultar">
                          <%= button_to 'Listar Actividades',"javascript:listarActividades()" , :class => "button radius", :id => "listar_actividades_link" %>
                        </div>

                        <% end %>

                    </div>
                   
                </div>
              </div>
            </div>
          </div>
          
          <div class="blank_slate_arrow"></div>
          

          </header>

          <div class="row">
             <div class="small-12 large-5 large-offset-7 columns left">
              <dl id="listaFiltros" class="sub-nav">
                  <dd id="filtroTodos" class="active">
                      <%= link_to 'Todas', :controller => :actividads, :action => :filtrado , :proceso_id  => @proceso.id , :estado_id => 0 , :remote => true %>
                  </dd>
                  <dd id="filtroProgramadas">
                      <%= link_to 'Programadas', :controller => :actividads, :action => :filtrado , :proceso_id  => @proceso.id , :estado_id => 1 , :remote => true %>
                  </dd>
                  <dd id="filtroAbiertas"> 
                    <%= link_to 'Abiertas', :controller => :actividads, :action => :filtrado , :proceso_id  => @proceso.id , :estado_id => 2 , :remote => true %>
                  </dd>
                  <dd id="filtroAtrasadas">
                    <%= link_to 'Atrasadas', :controller => :actividads, :action => :filtrado , :proceso_id  => @proceso.id , :estado_id => 3 , :remote => true %>
                  </dd>
                  <dd id="filtroTerminadas">
                    <%= link_to 'Terminadas', :controller => :actividads, :action => :filtrado , :proceso_id  => @proceso.id , :estado_id => 4 , :remote => true %>
                  </dd>
              </dl>
            </div>
           
          </div>

          <div class="sheet_body fondoGris">
            <div id="date_display_Project:2733915" class="date_display" data-autoview="">
                        
                        <div id="noticeMsg" data-alert class="alert-box success radius ocultar"></div>
                        <% if @actividad.activo == false %>
                          <div id="noticeMsgEliminar" data-alert class="alert-box alert radius" style="text">Si desea restablecer la actividad, use el boton guardar actividad.</div> 
                        <% end %>


                        <div id="formularioActividades"></div>


                        <% if  @actividadesRender == "true" %>
                          
                          <section id="actividades" class="calendar_events ocultar" >
                            <%= render @actividads %>
                          </section>

                            <%= render ('form') %>
                            <script type="text/javascript"> $("#formActividad").removeClass( "ocultar" ); </script>

                        <% else %>

                           <section id="actividades" class="calendar_events">
                            <%= render @actividads %>
                           </section>
                          
                        <% end %>
                   
              <% if  @actividads.empty? && @actividadesRender != "true"%>
                   <div id="panelActividadesImagen"  class="row">
                    <div class="large-8 small-offset-4 large-offset-4 columns">
                          <img src="/img/calendario.png" width="250px" style="opacity: 0.4;">
                      </div>
                      <div class="large-9 small-offset-3 large-offset-3 columns">
                        <h3 class="textoGris">Inicia Creando una nueva actividad</h3>
                      </div>
                   </div>
                <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<!-- Mostrar este mensaje si la lista de participantes esta vacia -->
<% if @actividads.size == 0 %>
<ol id="joyrideActividad" class="joyride-list" data-options="nextButton : true,tipAnimation : 'fade',tipAnimationFadeSpeed: 300" data-joyride>
  <li data-id="new_actividad_link" data-text="Salir">
    <p>Inicia creando y asignando una nueva actividad</p>
  </li>
</ol>
<script>
     $(document).foundation('joyrideActividad', 'start');
  </script>
<% end %>

 <div id="myModalCompartirProceso" class="reveal-modal medium modalAspen">
    <%= render 'procesos/formControlAcceso' %>
  </div>

</body>