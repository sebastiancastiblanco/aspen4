<body>
  <div id="workspace" class="workspace">
    <div class="container stack_container" style="width: 960px;">
      <div class="panel sheet project active blank_slate fondoGris" >

       <header>
          <ul class="breadcrumbs">
            <li><%= link_to 'Procesos', procesos_path %></li>
            <li><%= link_to @proceso do  %> 
                  proceso <%= @proceso.id %> : <%= @proceso.titulo %> 
                <% end %>
            </li>
            <li><%= link_to 'Actividades', "javascript:listarActividades()" %></li>
          </ul>
        </header>
        <div id="date"></div>
        <div class="panel sheet topics fondoGris" style="margin-left: 20px; margin-bottom: -20px;" data-behavior=" prevent_reload_when_stacked">
          <header class="has_buttons">
            <div data-behavior="edit_project_header expandable">
            <div class="collapsed_content">
              <div class="row">
                <div class="small-12 columns">
                    <div class="small-5 columns left">
                      <h1 id="tituloActividad">
                        Actividades
                      </h1>
                    </div>
                    <div class="small-4 columns left">
                      <dl id="listaFiltros" class="sub-nav">
                          <dd id="filtroTodos" class="active">
                              <%= link_to 'Todas', :controller => :actividads, :action => :filtrado , :proceso_id  => @proceso.id , :estado_id => 0 , :remote => true %>
                          </dd>
                          <dd id="filtroAbiertas"> 
                            <%= link_to 'Abiertas', :controller => :actividads, :action => :filtrado , :proceso_id  => @proceso.id , :estado_id => 1 , :remote => true %>
                          </dd>
                          <dd id="filtroAtrasadas">
                            <%= link_to 'Atrasadas', :controller => :actividads, :action => :filtrado , :proceso_id  => @proceso.id , :estado_id => 3 , :remote => true %>
                          </dd>
                          <dd id="filtroTerminadas">
                            <%= link_to 'Terminadas', :controller => :actividads, :action => :filtrado , :proceso_id  => @proceso.id , :estado_id => 2 , :remote => true %>
                          </dd>
                      </dl>

                    </div>
                    <div id="botonesActividades" class="small-2 columns left">
                        
                        <%= button_to 'Nueva Actividad', {:controller => "actividads", :action => "new", :id => @proceso.id},  :remote => true, :class => "button radius ", :id => "new_actividad_link" %>

                        <%= button_to 'Listar Actividades',"javascript:listarActividades()" , :class => "button radius ocultar", :id => "listar_actividades_link" %>
                    </div>
                    <% if notice %>
                              <div data-alert class="alert-box success radius">
                                <%= notice %>
                                <a href="#" class="close">&times;</a>
                              </div>
                    <% end %>
                </div>
              </div>
            </div>
          </div><div class="blank_slate_arrow"></div>
          </header>
          <div class="sheet_body fondoGris">
            <div id="date_display_Project:2733915" class="date_display" data-autoview="">
                        <section id="actividades" class="calendar_events">
                            <%= render @actividads %>
                        </section>
                        <div id="formularioActividades"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>