                   <div id="panelcontratoImagen"  class="row">
                    <div class="large-8 small-offset-4 large-offset-4 columns">
                          <img src="/img/reloj.png" width="250px" style="opacity: 0.4;">
                      </div>
                      <div class="large-8 small-offset-4 large-offset-4 columns"  style="padding-left: 0px !important;">
                        <h3 class="textoGris">No hay alertas pendientes</h3>
                      </div>
                   </div>
              <% end %>

<hr>
 <%= link_to 'Proximas Alertas', "javascript:eventoCamposOpcionalesAlertasProximos()", :class=>"textolinks alinearDerecha", :id => "mostrarCamposOpcionales" %>

          <div id="camposOpcionalesAlertasProximos"  class="row ocultar">
            <header class="has_buttons">
                      <div data-behavior="edit_project_header expandable">
                      <div class="collapsed_content">
                        <div class="row">
                          <div class="small-12 columns">

                              <div class="small-12 columns left">
                                <h4 id="tituloContrato" >
                                  Proximas Alertas
                                </h4>
                                
                              </div>

                          </div>
                        </div>
                      </div>
                    </div><div class="blank_slate_arrow"></div>
                    </header>

                    <div class="sheet_body fondoGris">
                      <div id="date_display_Project:2733915" class="date_display" data-autoview="">
                      <section class="calendar_events">

                                  <% @alertasProximas.each do |alerta| %>
                                        <%= render 'alertaProxima', :alerta => alerta %>
                                  <% end %>

                         </section>
                      </div>
                    </div>

          </div>

       </div>
      </div>
    </div>
  </div>
