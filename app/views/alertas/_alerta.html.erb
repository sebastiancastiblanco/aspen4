 <section id="alerta_<%= alerta.id %>" class="group today upcoming_events">
    <header>
        
    </header>
    <article class="calendar_event">
        <header>
                <span class="month"><%= fechaFormato1 alerta.termina %></span>
                <span class="day" style="background-color: #777 !important"><%= fechaDia alerta.termina %></span>
        </header>

        <ul>
            <li id="CalendarEvent_5615518">
               
                Titulo: <span class="bold" style=""><%= alerta.titulo %></span>
                
                <p style="margin-bottom: 0px;">Programada: <%= fechaFormatoActualizado alerta.termina %> </p>
                <p style="margin-bottom: 0px;">Nota: <%= alerta.nota %> </p>
                

                <%= button_to 'Ver', edit_alerta_path(alerta, :proceso_id => @proceso.id), :id => "new_alert_link",:class => "tiny button radius alinearbotones botoncalendario" %>

                  <%= link_to "Eliminar", alerta_path(alerta, :proceso_id => @proceso.id), :class => "textRojolinks inlineBlock eliminarlink margeneliminar",  :method => :delete, :confirm => "Estas Seguro de eliminar esta alerta?"   %>

            </li>
        </ul>
    </article>
</section>
