
<div class="row large-centered" >

   <div class=" small-12 large-5 large-centered small-centered columns  panelsetuptop ">
    <%= link_to :root  do %>
          <img src="/img/aspen_logo_small.png" style="width: 64px;"/>
        <% end %>
  </div>  

  <div class=" row panel panelsetupbuttom small-12 large-5 large-centered small-centered columns  ">
   <h2>Crear Cuenta</h2>

   <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

   <div><%= f.label "Correo Electronico" %><br />
    <%= f.email_field :email, :autofocus => true  , :class=>"cajaMargen" %></div>

    <div><%= f.label "Contraseña" %><br />
      <%= f.password_field :password  , :class=>"cajaMargen" %></div>

      <div><%= f.label "Confirmar Contraseña" %><br />
        <%= f.password_field :password_confirmation , :class=>"cajaMargen" %></div>

        <div><%= f.submit "Iniciar cuenta gratuita" , :class=>"button botonGrande success" %></div>
        <div style="text-align:center">
          <%= link_to "realizando clic, esta aceptando los terminos y condiciones.", :terminosYcondiciones , :class=>"cajaMargenDerecha letra12px" ,:target => "_blank"   %></div>
          <hr>
    <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>

<script type="text/javascript">
 $( "#topbar" ).remove();
  $( "#topbar2" ).remove();
</script>
