
<div class="row large-centered" >

<div class=" row panel panelLogin small-4 large-4 large-centered small-centered columns ">
<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

  <div><%= f.label "Correo electronico" %><br />
  <%= f.email_field :email, :autofocus => true  , :class=>"cajaMargen" %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Aun esperando confirmacion para la cuenta: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label "Contraseña" %> <i>(Dejarlo en blanco si no desea modificarlo)</i><br />
  <%= f.password_field :password, :autocomplete => "off"  , :class=>"cajaMargen" %></div>

  <div><%= f.label "Confirmar contraseña" %><br />
  <%= f.password_field :password_confirmation  , :class=>"cajaMargen" %></div>

  <div><%= f.label :current_password %> <i>(Necesitamos la actual contraseña para comfirmar los cambios)</i><br />
  <%= f.password_field :current_password  , :class=>"cajaMargen" %></div>

  <div><%= f.submit "Actualizar" , :class=>"button botonGrande" %></div>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p><%= button_to "Cancelar cuenta", registration_path(resource_name), :data => { :confirm => "Esta seguro de eliminar la cuenta?" }, :method => :delete , :class=>"button alert botonGrande" %></p>

<%= link_to "Regresar", :back %>

</div>
</div>
