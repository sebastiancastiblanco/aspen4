

<div class="row large-centered" >

<div class=" row panel panelLogin small-4 large-4 large-centered small-centered columns ">

<h2>Reenviar instrucciones de desbloqueo</h2>

<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
  <div><%= f.label "Correo Electronico" %><br />
  <%= f.email_field :email, :autofocus => true   , :class=>"cajaMargen"%></div>

  <div><%= f.submit "Reenviar instrucciones de desbloqueo" , :class=>"button botonGrande"  %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>