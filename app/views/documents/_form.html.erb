<%= form_for(@document,:html => { :multipart => true }) do |f| %>


  <div class="row">
       <%= hidden_field_tag :proceso_id, params[:proceso_id] %>

    <div class="small-2 small-offset-0 columns ">
      <%= f.label :Nombre_, :class => "tituloCampo error alinearDerecha" %>
    </div>
    <div class="small-4 columns field">
      <%= f.text_field :name, :placeholder => "Nombre del documento" %>
    </div>

   
     <div class="small-6 columns field">
      <%= f.file_field :attachment, :placeholder => "Seleccionar un archivo" %>
    </div>

 </div>

 <div class="row">

     <div class="small-1 small-offset-7 columns field"></div>
      <div class="small-3 columns field">
      <%= f.submit :'Guardar Documento' , :class => " button success radius" %></div>
     </div>

</div>
<% end %>
