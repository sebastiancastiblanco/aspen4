
<body>

  <div id="workspace" class="workspace">
    <div class="container stack_container" style="width: 960px;">
      <div class="panel sheet project active blank_slate fondoGris" >

        <header>
              <ul class="breadcrumbs">
                <li><%= link_to @proceso, :class => "tituloProceso" do  %> 
                      <%= @proceso.tipo_proceso.tipo %> : <%= @proceso.titulo %>
                    <% end %>
                </li>
                 <li> <%= link_to   "Documentos", {:controller => "documents", :action => "index", :proceso_id => params[:proceso_id]}, :method=>:get %></li>
                
              </ul>
        </header>

        <div class="panel sheet topics fondoGris" style="margin-left: 20px; margin-bottom: -20px;" data-behavior=" prevent_reload_when_stacked">

          <header class="has_buttons">
            <div data-behavior="edit_project_header expandable">
            <div class="collapsed_content">
              <div class="row">
                <div class="small-12 columns">

                    <div class="small-6 small-9 columns left">
                      <h1 id="tituloContrato">
                        Documentos
                      </h1>
                    </div>

                    <div class="small-3 small-3 columns left">


                         <%= button_to "Nuevo Documento", {:controller => "documents", :action => "new", :proceso_id => @proceso.id},:class => " button radius ", :id => "new_document_link" %>

                    </div>

                    <% if notice %>
                              <div data-alert class="alert-box success radius">
                                <%= notice %>
                                <a href="#" class="close">&times;</a>
                              </div>
                    <% end %>

                </div>
              </div>
            </div>
          </div><div class="blank_slate_arrow"></div>
          </header>



          <div class="sheet_body fondoGris">
           <div class="attachments_table ">
              <section class="attachments grouped_by_date">

                <div class="date_group" >
                   <% @documents.each do |document| %>
                    <%= render 'document', :document => document %>
                   <% end %>
                    </div>
               </section>
            </div>
          </div>

          <% if  @documents.empty? %>
                   <div id="panelcontratoImagen"  class="row">
                    <div class="large-8 small-offset-4 large-offset-4 columns">
                          <img src="/img/addArchivo.png" width="250px" style="opacity: 0.4;">
                      </div>
                      <div class="large-9 small-offset-3 large-offset-3 columns">
                        <h3 class="textoGris">Inicia subiendo un nuevo documento</h3>
                      </div>
                   </div>
              <% end %>

        </div>
      </div>
    </div>
  </div>


<!-- Mostrar este mensaje si la lista de documentos esta vacia -->
<% if @documents.size == 0 %>
<ol id="joyrideDocumentos" class="joyride-list" data-options="nextButton : true,tipAnimation : 'fade',tipAnimationFadeSpeed: 300" data-joyride>
  <li data-id="new_document_link" data-text="Salir">
    <p>Inicia adjuntado un documento</p>
  </li>
</ol>
<script>
     $(document).foundation('joyrideDocumentos', 'start');
  </script>
<% end %>

</body>

