<%= form_for @participante, :remote => true, :html => { :class => "custom ocultar",:id => "formParticipante"}  do |f| %>
<div class="row">

    <div class="small-2 small-offset-0 columns ">
      <%= f.label :nombre_, :class => "tituloCampo error alinearDerecha" %>
    </div>
    <div class="small-4 columns field">
      <%= f.text_field :nombre, :placeholder => "Nombre" %>
    </div>
    
    <div class="small-2 small-offset-0 columns ">
      <%= f.label :apellido_, :class => "tituloCampo error alinearDerecha" %>
    </div>
    <div class="small-4 columns field">
      <%= f.text_field :apellido, :placeholder => "Apellido" %>
    </div>
    
    <div class="small-2 small-offset-0 columns ">
      <%= f.label :correo_, :class => "tituloCampo error alinearDerecha" %>
    </div>
    <div class="small-4 columns field">
      <%= f.text_field :correo, :placeholder => "Correo electronico" %>
    </div>
     <div class="small-2 small-offset-0 columns ">
      <%= f.label :rol_, :class => "tituloCampo error alinearDerecha" %>
    </div>
    <div class="small-4 columns field">
           <%= f.select :rol_participante_id, [["Rol Participante", 0]] + @rol_participantes.map {|r| [r.rol,r.id]}, { :disabled => ["Rol Participante", 0] } %>
    </div>
</div>

<hr>
 <%= link_to 'Mostrar Campos Opcionales', "javascript:eventoCamposOpcionalesParticipante()", :class=>"textolinks", :id => "mostrarCamposOpcionales" %>
<hr>

<div id="camposOpcionalesParticipante" class="row ocultar">
      <section>
       
          <div class="small-2 small-offset-0 columns ">
            <%= f.label "Tipo Documento", :class => "tituloCampo error alinearDerecha" %>
          </div>
          <div class="small-4 columns field">
            <%= f.text_field :tipoDocumento, :placeholder => "Tipo Documento" %>
          </div>
          
            <div class="small-2 small-offset-0 columns">
            <%= f.label :documento_, :class => "tituloCampo error alinearDerecha" %>
          </div>
          <div class="small-4 columns field ">
            <%= f.text_field :documento, :placeholder => "Número de Documento" %>
          </div>


          <div class="small-2 small-offset-0 columns ">
            <%= f.label :estadoCivil_, :class => "tituloCampo error alinearDerecha" %>
          </div>
          <div class="small-4 columns field">
            <%= f.text_field :estadoCivil, :placeholder => "Estado Civil" %>
          </div>
          
          <div class="small-2 small-offset-0 columns ">
            <%= f.label :genero_, :class => "tituloCampo error alinearDerecha" %>
          </div>
          <div class="small-4 columns field">
            <%= f.text_field :genero, :placeholder => "Genero" %>
          </div>
          
          
          <div class="small-2 small-offset-0 columns ">
            <%= f.label :direccion_, :class => "tituloCampo error alinearDerecha" %>
          </div>
          <div class="small-4 columns field">
            <%= f.text_field :direccion, :placeholder => "Dirección" %>
          </div>
          <div class="small-2 small-offset-0 columns ">
            <%= f.label :telefono_, :class => "tituloCampo error alinearDerecha" %>
          </div>
          <div class="small-4 columns field">
            <%= f.text_field :telefono, :placeholder => "Teléfono" %>
          </div>    

          <div class="small-2 small-offset-0 columns ">
          <%= f.label :fechaNacimiento_, :class => "tituloCampo error alinearDerecha" %>
          </div>
          <div class="small-4 columns field">
            <%= f.text_field :fechaNacimiento , :placeholder => "Fecha Nacimiento" %>
          </div>
          <div class="small-2 small-offset-0 columns ">
            <%= f.label :celular_, :class => "tituloCampo error alinearDerecha" %>
          </div>
          <div class="small-4 columns field">
            <%= f.text_field :celular, :placeholder => "Número de Celular" %>
          </div>  

        
      </section>
</div>

<div class="row"> 

     <div class="small-1 small-offset-7 columns field"></div>
     <div class="small-1 columns field margenTop25">
      <%= link_to 'Cancelar', "javascript:listarParticipantes()", :class=>"textoGrislinks" %>
     </div>
     <div class="small-2 columns field">
      <%= f.submit :'Guardar Participante' , :class => " button success radius" %></div>
     </div>
     <%= hidden_field_tag :proceso_id, @proceso.id %>

</div>

<% end %>

<script>
  $(document).foundation();
  jQuery('#participante_fechaNacimiento').datepicker({dateFormat: "dd MM yy"});
</script>
